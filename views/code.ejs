<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="Responsive Admin &amp; Dashboard Template based on Bootstrap 5" />
    <meta name="author" content="AdminKit" />
    <meta name="keywords" content="adminkit, bootstrap, bootstrap 5, admin, dashboard, template, responsive, css, sass, html, theme, front-end, ui kit, web" />

    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link rel="canonical" href="https://demo-basic.adminkit.io/" />

    <title>Code Setting</title>

    <!-- <link href="css/app.css" rel="stylesheet"> -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />

    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" />

    <link rel="stylesheet" href="/fonts/fontawesome-all.min.css" />
    <link rel="stylesheet" href="/fonts/font-awesome.min.css" />
    <link rel="stylesheet" href="/fonts/fontawesome5-overrides.min.css" />
    <link rel="stylesheet" href="/css/main.css" />
    <link rel="stylesheet" href="/css/app.css" />

    <link rel="stylesheet" href="/css/light.css" />
  </head>

  <body>
    <div class="wrapper">
      <%- include('./partials/sidebar'); %>

      <!-- form Add/Edit Code -->
      <div class="modal fade" role="dialog" tabindex="-1" id="modalCodeMaster">
        <div
          class="modal-dialog modal-lg modal-dialog-centered"
          role="document"
        >
          <div class="modal-content">
            <form id="formCode" action="/Setting/AddEditRecpName">
              <div class="modal-header">
                <h4 class="modal-title" id="modalHeaderAddPart">Add Code:</h4>
                <button
                  type="button"
                  class="close"
                  data-dismiss="modal"
                  aria-label="Close"
                >
                  <span aria-hidden="true">×</span>
                </button>
              </div>
              <div class="modal-body">
                <div class="form-row my-2">
                  <div class="col-xl-4 d-xl-flex justify-content-xl-end align-items-xl-center">
                    <span><p class="red">*</p>Id:&nbsp;</span>
                  </div>
                  <div class="col-xl-8 d-xl-flex align-items-xl-center">
                    <input class="form-control" type="text" id="modalInpCodeId" style="width: 100%" required=""/>
                  </div>
                </div>
                <div class="form-row my-2">
                  <div class="col-xl-4 d-xl-flex justify-content-xl-end align-items-xl-center">
                    <span><p class="red">*</p>Name:&nbsp;</span>
                  </div>
                  <div class="col-xl-8 d-xl-flex align-items-xl-center">
                    <input class="form-control" type="text" id="modalInpCodeName" style="width: 100%" required=""/>
                  </div>
                </div>
                <div class="form-row my-2">
                  <div class="col-xl-4 d-xl-flex justify-content-xl-end align-items-xl-center">
                    <span><p class="red">*</p>Type:&nbsp;</span>
                  </div>
                  <div class="col-xl-8 d-xl-flex align-items-xl-center">
                    <select class="form-select" id="modalInpCodeType">
                      <option value="" selected="">Please Select Type</option>
                      <option value="Light">Light</option>
                      <option value="Buzzer">Buzzer</option>
                      <option value="Flash">Flash</option>
                    </select>
                  </div>
                </div>
                <div class="form-row my-2">
                  <div class="col-xl-4 d-xl-flex justify-content-xl-end align-items-xl-center">
                    <span><p class="red">*</p>Code:&nbsp;</span>
                  </div>
                  <div class="col-xl-8 d-xl-flex align-items-xl-center">
                    <input class="form-control" type="text" id="modalInpCode" style="width: 100%" required=""/>
                  </div>
                </div>
              </div>
              <div class="modal-footer">
                <button class="btn btn-primary" id="modalSaveCode" type="button">Save</button>
              </div>
            </form>
          </div>
        </div>
      </div>

      <!-- form Add/Edit Patlite -->
      <div class="modal fade" role="dialog" tabindex="-1" id="modalPatliteMaster">
        <div
          class="modal-dialog modal-lg modal-dialog-centered"
          role="document"
        >
          <div class="modal-content">
            <form id="formPatlite" action="/Setting/AddEditRecpName">
              <div class="modal-header">
                <h4 class="modal-title" id="modalHeaderAddPart">Add Patlite:</h4>
                <button
                  type="button"
                  class="close"
                  data-dismiss="modal"
                  aria-label="Close"
                >
                  <span aria-hidden="true">×</span>
                </button>
              </div>
              <div class="modal-body">
                <div class="form-row my-2">
                  <div class="col-xl-4 d-xl-flex justify-content-xl-end align-items-xl-center">
                    <span><p class="red">*</p>Name:&nbsp;</span>
                  </div>
                  <div class="col-xl-8 d-xl-flex align-items-xl-center">
                    <input class="form-control" type="text" id="modalInpPatliteName" style="width: 100%" required=""/>
                  </div>
                </div>
                <div class="form-row my-2">
                  <div class="col-xl-4 d-xl-flex justify-content-xl-end align-items-xl-center">
                    <span><p class="red">*</p>Ip:&nbsp;</span>
                  </div>
                  <div class="col-xl-8 d-xl-flex align-items-xl-center">
                    <input class="form-control" type="text" id="modalInpPatliteIp" style="width: 100%" required=""/>
                  </div>
                </div>
                <div class="form-row my-2">
                  <div class="col-xl-4 d-xl-flex justify-content-xl-end align-items-xl-center">
                    <span><p class="red">*</p>TCP-Port:&nbsp;</span>
                  </div>
                  <div class="col-xl-8 d-xl-flex align-items-xl-center">
                    <input class="form-control" type="text" id="modalInpPatlitePort" style="width: 100%" required=""/>
                  </div>
                </div>
              </div>
              <div class="modal-footer">
                <button class="btn btn-primary" id="modalSavePatlite" type="button">Save</button>
              </div>
            </form>
          </div>
        </div>
      </div>

      <!-- form delete -->
      <div class="modal fade" role="dialog" tabindex="-1" id="modalDeleteConfirm">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h4 class="modal-title">Confirm Delete</h4>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">×</span>
              </button>
            </div>
            <div class="modal-body text-center">
              <p>Are you sure to delete?</p>
            </div>
            <div class="modal-footer">
              <button class="btn btn-secondary" type="button" data-dismiss="modal">No</button>
              <button class="btn btn-danger btnYes" id="btnYes" type="button">Yes</button>
            </div>
          </div>
        </div>
      </div>

      <div class="main">
        <%- include('./partials/navbar'); %>

        <main class="content">
          <div class="container-fluid p-0">
            <div class="row">
              <div class="col-12 d-flex">
                <div class="card flex-fill">
                  <div class="card-header title">
                    <h1>Code</h1>
                    <button type="button" class="btn btn-success" id="addCode">ADD</button>
                  </div>
                  <table id="tableCode" class="table table-hover my-0" style="width: 100%">
                    <thead>
                      <tr>
                        <th>Index</th>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Type</th>
                        <th>Code</th>
                        <th style="width: 10%">Action</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <td colspan="6">Error...</td>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-12 d-flex">
                <div class="card flex-fill">
                  <div class="card-header title">
                    <h1>Patlite</h1>
                    <button type="button" class="btn btn-success" id="addPatlite">ADD</button>
                  </div>
                  <table id="tablePatlite" class="table table-hover my-0" style="width: 100%">
                    <thead>
                      <tr>
                        <th>Index</th>
                        <th>Name</th>
                        <th>IP</th>
                        <th>TCP-Port</th>
                        <th style="width: 10%">Action</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <td colspan="5">Error...</td>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </main>
      </div>
    </div>

    <script src="/js/app.js"></script>

    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="/js/jquery.min.js"></script>
    <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
    <script src="/bootstrap/js/bootstrap.min.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.4.14/dist/sweetalert2.all.min.js"></script>
    <script src="/code/code.js"></script>
    <script src="/code/patlite.js"></script>
    <script src="/code/dropdown.js"></script>
  </body>
</html>
